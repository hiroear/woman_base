<%# ⬇︎ログインユーザーがいいねした投稿だったら %>
<% if current_user.likes.find_by(topic: topic) %>
  <%=link_to tweet_likes_path(tweet), method: :delete, remote: true do %>
    <i class="fas fa-heart fa-lg" style="color: red;"></i>
  <% end %>

<%# ⬇︎ログインユーザーがいいねした投稿じゃなければ %>
<% else %>
  <%= link_to tweet_likes_path(tweet), method: :post, remote: true do %>
    <i class="far fa-heart fa-lg" style="color: red;"></i>
  <% end %>
<% end %>